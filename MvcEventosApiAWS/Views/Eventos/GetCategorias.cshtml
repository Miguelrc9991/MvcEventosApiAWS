@model IEnumerable<MvcEventosApiAWS.Models.CategoriaEvento>

@{
    ViewData["Title"] = "GetCategorias";
}

<h1>GetCategorias</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a class="nav-link text-dark" asp-area="" asp-controller="Eventos" asp-action="GetEventosCategoriaAsync" asp-route-idcategoria="@item.IdCategoria">Ver Eventos</a>
            </td>
        </tr>
}
    </tbody>
</table>
